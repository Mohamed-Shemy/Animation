<Window x:Class="Animation.StartUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animation"
        mc:Ignorable="d" WindowStyle="None"
        Title="MainWindow" Height="597" 
        Width="770" AllowsTransparency="True" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Icon="wesnoth.ico" >

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>

    <Canvas>
        <Image Name="earth" Source="img/saturn.png" Canvas.Left="207" Canvas.Top="130" Width="300" >
        </Image>

        <Image Name="boom" Source="img/boom2.png" Canvas.Top="-55" Width="700" Opacity="0" />

        <TextBlock Name="msh" Text="MOHAMED SHEMY" TextAlignment="Center" Foreground="#52A7FF" FontSize="70" Canvas.Left="52" Canvas.Top="255" FontFamily="Zap Raygun V2.0" RenderTransformOrigin="0.53,0.429" Width="0">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="10"     Direction="300" Color="Black"     Opacity="1"      BlurRadius="4"/>
            </TextBlock.Effect>
        </TextBlock>

        <Image x:Name="war" Source="img/msh.png" Width="150" Canvas.Left="10" Canvas.Top="164" >
        </Image>

    </Canvas>
</Window>
