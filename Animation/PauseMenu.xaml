<UserControl x:Class="Animation.PauseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Animation"
             mc:Ignorable="d" d:DesignWidth="300"   Height="175">
    <StackPanel>
        <Image x:Name="btn_resume" Source="btn/btn_resume_1.png"
                    Margin="0 , 0 , 0 ,5" Cursor="Hand"
               MouseMove="Image_MouseMove" MouseLeave="Image_MouseLeave"
               MouseDown="ResumeGameing"/>
        <Image x:Name="btn_go_to_menu" Source="btn/btn_go_to_menu_1.png"
                    Margin="0 , 0 , 0 ,5" Cursor="Hand"
               MouseMove="Image_MouseMove" MouseLeave="Image_MouseLeave"
               MouseDown="GoToMenu"/>
        <Image x:Name="btn_exit" Source="btn/btn_exit_1.png"
                    Margin="0 , 0 , 0 ,5" Cursor="Hand"
               MouseMove="Image_MouseMove" MouseLeave="Image_MouseLeave"
               MouseDown="Exit"/>
    </StackPanel>
</UserControl>
